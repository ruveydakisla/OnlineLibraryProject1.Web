                <img src="~/PhotoFolio/assets/img/gallery/ciri.jpg" alt="">
              </div>
              <div class="swiper-slide">
                <img src="~/PhotoFolio/assets/img/gallery/geralt.jpg" alt="">
              </div>
              <div class="swiper-slide">
                <img src="~/PhotoFolio/assets/img/gallery/eredin.jpg" alt="">
              </div>

            </div>
            <div class="swiper-pagination"></div>
          </div>
          <div class="swiper-button-prev"></div>
          <div class="swiper-button-next"></div>

        </div>

        <div class="row justify-content-between gy-4 mt-4">

          <div class="col-lg-8">
            <div class="portfolio-description">
              <h2>Kitap hakkında</h2>
              <p>
                arka kapak yazısı
              </p>
              

              <div class="testimonial-item">
                <p>
                  <i class="bi bi-quote quote-icon-left"></i>
                  yazarın sözü
                  <i class="bi bi-quote quote-icon-right"></i>
                </p>
                <div>
                  <img src="~/Photofolio/assets/img/testimonials/testimonials-2.jpg" class="testimonial-img" alt="">
                  <h3>yazar adı</h3>
                  <h4>writer</h4>
                </div>
              </div>

              

            </div>
          </div>

          <div class="col-lg-3">
            <div class="portfolio-info">
              <h3>Project information</h3>
              <ul>
                <li><strong>Category</strong> <span>Nature Photography</span></li>
                <li><strong>yazar</strong> <span>ASU Company</span></li>
                <li><strong>basım tarihi</strong> <span>01 March, 2022</span></li>
                <li><strong>yayınevi</strong> <a href="#">www.example.com</a></li>
                <li><a href="#" class="btn-visit align-self-start">Visit Website</a></li>
              </ul>
            </div>
          </div>

        </div>

      </div>
    </section><!-- End Gallery Single Section -->

