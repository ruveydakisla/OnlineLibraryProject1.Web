@using EntityLayer.Concrete
@{
    ViewData["Title"] = "BookShow";
}
@model Book

  <!-- ======= Header ======= -->
<div class="row">
    <div class="col-md-6">

        <main id="main" data-aos="fade" data-aos-delay="1500">

            <!-- ======= End Page Header ======= -->
            <div class="row">
                <div class="col-md-6">
                    <div class="page-header d-flex align-items-center">
                        <div class="container position-relative">
                            <div class="row d-flex justify-content-center">
                                <div class="col-lg-6 text-center">
                                    <h2>@Model.Name</h2>
                                </div>

                            </div>
                        </div>
                    </div><!-- End Page Header -->
                </div>
                <div class="col-md-6">
                    @Model.BookImage
                </div>
            </div>
            
            <!-- ======= Gallery Single Section ======= -->
            <section id="gallery-single" class="gallery-single">
                <div class="container">

                    <div class="position-relative h-100">

                        <div class="swiper-button-prev"></div>
                        <div class="swiper-button-next"></div>

                    </div>

                    <div class="row justify-content-between gy-4 mt-4">

                        <div class="col-lg-8">
                            <div class="portfolio-description">
                                <h2>@Model.Name</h2>
                                <p>
                                    @Model.Bookinfo
                                </p>


                                <div class="testimonial-item">
                                    <p>
                                        <i class="bi bi-quote quote-icon-left"></i>
                                        @Model.AuthorQuintessence
                                        <i class="bi bi-quote quote-icon-right"></i>
                                    </p>
                                    <div>

                                        <h3>@Model.AuthorName</h3>
                                        <h4>Yazar</h4>
                                    </div>
                                </div>



                            </div>
                        </div>

                        <div class="col-lg-3">
                            <div class="portfolio-info">
                                <h3>Kitap Bilgileri</h3>
                                <ul>
                                    <li><strong>Stok</strong> <span>@Model.Stock</span></li>
                                    <li><strong>Basım Yılı</strong> <span>@Model.Year</span></li>
                                    <li><strong>Sayfa Sayısı</strong> <span>@Model.PageNumber</span></li>
                                    <li><strong>Kitap Kategorisi</strong><span>@Model.BookCategory</span> </li>
                                </ul>
                            </div>
                        </div>

                    </div>

                </div>
            </section><!-- End Gallery Single Section -->

        </main><!-- End #main -->
        <!-- ======= Footer ======= -->

    </div>
    <div class="col-md-6">

        <iframe src="https://tr.wikipedia.org/wiki/@Model.AuthorName" name="cerceve" width="100%" height="700px"></iframe>
    </div>
</div>

  


  <a href="#" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  



