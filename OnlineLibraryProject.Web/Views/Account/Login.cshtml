@{
    ViewData["Title"] = "Login";
}
@model LoginViewModel




    <div class="row ">
        <div class="col col-4 offset-4">
            <h1 class="display-4 border-bottom text-center pb-2 border-2 ">@ViewData["Title"]</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-4 offset-4">
            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label asp-for="UserName" class="form-label ">Username</label>
                    <input asp-for="UserName" placeholder="johndoe" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger small"></span>

                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label ">Username</label>
                    <input asp-for="Password" placeholder="johndoe" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="form-check-label" asp-for="KeepLoggedIn">Keep Logged In</label>
                    <input class="form-check-input" type="checkbox" name="name" asp-for="KeepLoggedIn" />
                </div>
                <div class="form-group d-grid mb-3 ">
                    <button type="submit" class="btn btn-primary d-block">Login</button>
                </div>
                @if (ViewData["ValidateMessage"] != null)
                {
                    <br />
                    <br />
                    <label class="text-danger">@ViewData["ValidateMessage"]</label>
                }


            </form>
        </div>
    </div>


 