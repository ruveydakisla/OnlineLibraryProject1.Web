@{
    ViewData["Title"] = "Login";
}
@model LoginViewModel



<div class="row col-4 offset-4 text-center">
    <h1 class="display-4 ">Login</h1>
</div>
<div class="row">
    <div class="col-4 offset-4">
        <form asp-controller="Account" asp-action="Login" method="post" >
            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label ">Username</label>
                <input asp-for="UserName" placeholder="johndoe" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger small"></span>

            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label ">Username</label>
                <input asp-for="Password" placeholder="johndoe" class="form-control" />
                <span asp-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group d-grid mb-3 ">
                <button  type="submit" class="btn btn-primary d-block">Login</button>
            </div>
        </form>
    </div>
</div>


