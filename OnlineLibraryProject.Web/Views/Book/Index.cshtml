
@{
    ViewData["Title"] = "Index";
}
@model List<Book>

<h1>Ürünler</h1>

@if (TempData["status"] != null)
{
    <span>@TempData["status"]</span>

    <div class="alert alert-primary" role="alert">
        @TempData["status"]
    </div>

}

<a asp-controller="Book" asp-action="add">Ekle </a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Isim</th>
            <th>Stok</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Stock</td>
                <td>@item.Year</td>

                <td>
                    <a asp-controller="Book" asp-action="remove" asp-route-id="@item.Id">Sil</a>
                    <a asp-controller="Book" asp-action="update" asp-route-id="@item.Id">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
