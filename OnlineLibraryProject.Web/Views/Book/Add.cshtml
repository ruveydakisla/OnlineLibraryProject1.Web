@using EntityLayer.Concrete;

@{
    ViewData["Title"] = "Add";
}


   
    <main id="main" data-aos="fade" data-aos-delay="1500">
        <div class="page-header d-flex align-items-center">
            <div class="container position-relative">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-6 text-center">
                    </div>
                </div>
            </div>
        </div>
        <div class="row ">
            <div class="col col-4 offset-4">
                <h1 class="display-4 border-bottom text-center pb-2 border-2 ">@ViewData["Add Book"]</h1>
            </div>
        </div>
@model Book
<div class="row ">
       <div class="col-4 offset-4">
<form asp-controller="Book" asp-action="Add" method="post">
                    <label class="form-label">Book ID:</label>
                    <div class="form-group mb-3">

                        <input type="text" class="form-control" asp-for="BookID" />
                    </div>
                    <label class="form-label">Book Name:</label>
                    <div class="form-group mb-3">

                        <input type="text" class="form-control" asp-for="Name" />
                    </div>
                    <label class="form-label">Stock:</label><br/>
                    <div class="form-group mb-3">
                        <input type="text" class="form-control" asp-for="Stock" />
                    </div>
                        <label class="form-label">Year:</label>
                    <div class="form-group mb-3">

                        <input type="text" class="form-control" asp-for="Year" />
                    </div>
                    <label class="form-label">Page Number :</label>
                    <div class="form-group mb-3">

                        <input type="text" class="form-control" asp-for="PageNumber" />
                    </div>
                    <label class="form-label">Book Category :</label>
                    <div class="form-group mb-3">

                        <input type="text" class="form-control" asp-for="BookCategory" />
                    </div>
                    <label class="form-label">Book İmage Path:</label>
                    <div class="form-group mb-3">

                        <input type="text" class="form-control" asp-for="BookImage" />
                    </div>
                    <label class="form-label">Book Preliminary Information : </label>
                    <div class="form-group mb-3">
 
                    @*<input type="text" class="form-control"asp-for="AuthorQuintessence" />*@
                    </div>
                    <label class="form-label">Author Quintessence </label>
                    <div class="form-group mb-3">

                        @*<input type="text" class="form-control" asp-for="AuthorAbout" />*@
                    </div> <label class="form-label">Author About </label>
                    <div class="form-group mb-3">


                        <input type="text" class="form-control" asp-for="Bookinfo" />
                    </div>
                    <label class="form-label">Author Name : </label>
                    <div class="form-group mb-3">

                        @*<input type="text" class="form-control" asp-for="AuthorName" />*@
                    </div>
                    <div class="form-group d-grid mb-3 ">
                    <button type="submit" class="btn btn-success d-block"><i class="fa-solid fa-paper-plane me-2"></i>Save Book</button>
                    </div>
</form>                 
        </div>
        </div>
    </main>
    
