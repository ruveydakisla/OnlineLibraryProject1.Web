@using EntityLayer.Concrete;

@{
    ViewData["Title"] = "Add";
}
@model Book
<h1>Kitap Ekleme</h1>
<form asp-controller="Book" asp-action="Add" method="post">
    <label>Kitap ismi:</label>
    <input type="text" asp-for="Name" />
    <br />
    <label>Kitap Adeti:</label>
    <input type="text" asp-for="Stock" />
    <br />
    <label>Yılı:</label>
    <input type="text" asp-for="Year" />
    <br />
    <label>Kitap Sayfa Numarası</label>
    <input type="text" asp-for="PageNumber" />
    <br />
    <label>Kitap Kategorisi</label>
    <input type="text" asp-for="BookCategory" />
    <br />
    <label>Kitap Ön bilgi</label>
    <input type="text" asp-for="Bookinfo" />
    <button type="submit">Kitap Kaydet</button>
</form>

